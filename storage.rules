rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Recording files
    match /recordings/{battleId}/{allPaths=**} {
      // Anyone can read recordings (for download)
      allow read: if true;

      // Anyone can write recordings (no auth required for simplicity)
      // In production, you might want to add authentication
      allow write: if request.resource.size < 100 * 1024 * 1024; // Max 100MB per chunk
    }
  }
}
